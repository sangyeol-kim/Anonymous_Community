<div style="margin-top: 5px; width: 40%; text-align: center;", class="container">
<h3>이곳은 "<%= @anonymous_room.title %>" 방입니다.</h3><br>

<div style="border: 1px dotted #48BAE4; margin: auto; width: 108%;", id="messages", data-anonymous-room-id="<%= @anonymous_room.id %>">
      <%= render @anonymous_room.messages %>
</div>

<%= form_for @message, url: '#' do |f| %>
  <div style="margin: auto; width: 45%;", class="form-group">
    <%= f.label :성숙한_시민의식을_보여주세요, class: "alert alert-info" %>
    <%= f.text_area :message, class: 'form-control', style: "border: 1px dotted #2F4F4F;" %>
    <%= f.hidden_field :user_id, value: current_user.id %>
      <small class="text-muted">1000자 미안으로 작성해주세요</small>
      <%= f.submit "전송!", style: "font-size: 18px;", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
<p style="margin-top: 15px;"><%= link_to "뒤로가기" , anonymous_rooms_path, style: "font-size: 18px; color: black" %></p>
</div>
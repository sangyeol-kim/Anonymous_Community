<body style="background: url('/img/anonymous3.jpg') no-repeat center center/cover fixed; margin-top: 0px;">
<div style="margin-left:20%; margin-top: 7%; text-align: center; color:white;", class="container">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field col-12 col-sm-8 col-md-12">
      <%= f.label :이메일 %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field col-12 col-sm-8 col-md-12">
      <%= f.label :비밀번호 %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field col-12 col-sm-8 col-md-12">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions col-12 col-sm-8 col-md-12">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
  </body>
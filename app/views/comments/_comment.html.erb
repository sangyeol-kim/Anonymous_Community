<li id="comment_<%=comment.id %>">
  <%= comment.user.nickname %>
  <%= comment.comment %>
  <%= time_ago_in_words(comment.created_at) %>전
  <% if can? :destroy, comment %>
      <%= link_to "삭제", [comment.post, comment], method: :delete, remote: true, data: { confirm: "정말로 지우시겠습니까?" }, class: "fa fa-times" %>
  <% end %>
  </li>
